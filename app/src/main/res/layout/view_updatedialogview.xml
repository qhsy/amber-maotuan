<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="278dip"
        android:layout_height="365dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_gray_circular">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_updatedialogview_option"
            android:layout_margin="15dip"
            android:background="@color/color_white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_pop_top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:layout_marginBottom="15dip"
                android:text="【更新内容】"
                android:textColor="@color/color_standard_3"
                android:textSize="@dimen/textsize_13"/>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip">

                <TextView
                    android:id="@+id/tv_updatedialogview_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_standard_2"
                    android:textSize="@dimen/textsize_12"/>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_updatedialogview_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_updatedialogview_leftbtn"
                android:layout_width="0dip"
                android:layout_height="34dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:text="取消"
                android:textColor="@color/color_standard_2"
                android:textSize="@dimen/textsize_14"/>

            <Button
                android:id="@+id/btn_updatedialogview_rightbtn"
                android:layout_width="0dip"
                android:layout_height="34dip"
                android:layout_weight="1"
                android:background="@color/color_blue"
                android:text="立即升级"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textsize_14"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>