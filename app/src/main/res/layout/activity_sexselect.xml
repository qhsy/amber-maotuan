<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_background_ef"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_activity_sex_manlay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/oneline_downbkg_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="男"
            android:textSize="@dimen/textsize_14"/>
        <ImageView
            android:id="@+id/iv_activitysex_manchecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_duigou"
            android:visibility="invisible"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_activity_sex_womanlay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="女"
            android:textSize="@dimen/textsize_14"/>
        <ImageView
            android:id="@+id/iv_activitysex_womenchecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_duigou"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>