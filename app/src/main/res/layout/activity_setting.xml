<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:showDividers="middle"
              android:background="@color/devide_gray"
              android:divider="@drawable/item_divider"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_settingactivity_clearcache"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableRight="@drawable/icon_jiantou"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="清除缓存"
        android:textColor="@color/color_text_deepcolor"
        android:textSize="@dimen/textsize_14"/>
    <TextView
        android:id="@+id/tv_settingactivity_checkupdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_settingactivity_clearcache"
        android:drawableRight="@drawable/icon_jiantou"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="检查更新"
        android:textColor="@color/color_text_deepcolor"
        android:textSize="@dimen/textsize_14"/>
    <TextView
        android:id="@+id/tv_settingactivity_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_settingactivity_checkupdate"
        android:drawableRight="@drawable/icon_jiantou"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="关于我们"
        android:textColor="@color/color_text_deepcolor"
        android:textSize="@dimen/textsize_14"/>
    <TextView
        android:id="@+id/tv_settingactivity_advice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_settingactivity_about"
        android:drawableRight="@drawable/icon_jiantou"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="意见反馈"
        android:textColor="@color/color_text_deepcolor"
        android:textSize="@dimen/textsize_14"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/rl_settingactivitiy_pushlay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="推送状态"
            android:textColor="@color/color_text_deepcolor"
            android:textSize="@dimen/textsize_14"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sc_buttontoggle"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:background="@color/color_transparent"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_settingactivity_loginout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_settingactivity_advice"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/color_text_red"
        android:textSize="@dimen/textsize_14"/>

    <com.ichsy.hrys.common.view.UpdateProgressDialogView
        android:id="@+id/updv_setting_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
</LinearLayout>
