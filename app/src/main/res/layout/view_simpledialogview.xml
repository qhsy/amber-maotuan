<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="11dp"
              android:background="@color/color_transparent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_roundcorner_fullwhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_viewsimpledialogview_topitem"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center"
            android:textColor="@color/color_text_deepcolor"

            android:textSize="@dimen/textsize_14"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_background_ef"
            />
        <TextView
            android:id="@+id/tv_viewsimpledialogview_centreitem"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center"
            android:textColor="@color/color_text_deepcolor"
            android:textSize="@dimen/textsize_14"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_viewsimpledialogview_bottomitem"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_btn_roundcorner_fullwhite"
        android:gravity="center"
        android:textColor="@color/color_text_deepcolor"
        android:textSize="@dimen/textsize_14"
        />

</LinearLayout>